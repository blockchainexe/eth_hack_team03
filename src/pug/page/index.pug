extends /layout/_default-layout

prepend config-block
  -
    page_name = 'home'
    rootPath = './'

append stylesheet-block
  link(rel="stylesheet", href="https://code.getmdl.io/1.3.0/material.deep_orange-pink.min.css")
  link(rel="stylesheet", href="https://fonts.googleapis.com/icon?family=Material+Icons")

append javascript-block
  script(defer, src="https://code.getmdl.io/1.3.0/material.min.js")

block content-block
  div(data-page="test")
    div.test-users
  #fb-root
  div(data-page="index")
    .title-area
      h2.mdl-typography--display-1
        | ガイドを探そう
      h1.mdl-typography--display-3
        | サービス名
    .fv.mdl-card.mdl-shadow--2dp
      .mdl-card__title(data-title)
        h2.mdl-card__title-text ガイドを探そう
      .mdl-card__supporting-text(data-supporting-text)
        | いい感じの説明文
      .mdl-card__actions.mdl-card--border(data-actions)
        a.login-handler.mdl-button.mdl-button--colored.mdl-button--raised.mdl-js-button.mdl-js-ripple-effect(data-button)
          | uPortにつなげる

  div(data-page="connect")
    .panel
      h2.mdl-typography--display-1
        | まずは、ソーシャルアカウントとつなげることで
        br
        | あなたのスコアを算出しましょう。

      p
        | Koppyはソーシャルアカウントの情報から自動であなたのスコア情報を作成します。

      .list
        .item
          button.fb-login-button(data-max-rows='1', data-size='large', data-button-type='continue_with', data-show-faces='false', data-auto-logout-link='false', data-use-continue-as='false')
            | facebookでログイン
          button.btn-get-like.mdl-button.mdl-button--colored.mdl-button--raised.mdl-js-button
            | スコアを表示する
        .item
          img(src="img/connect/btn-twitter.png", height="72")
        .item
          img(src="img/connect/btn-instagram.png", height="89")

  div(data-page="display-score")
    .mdl-card.mdl-shadow--2dp
      .mdl-card__supporting-text
        h2.heading
          | あなたのスコア:
      .mdl-card__title.mdl-card--expand
        .text-score
          | 000
      .mdl-card__actions.mdl-card--border
        a.mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect
          | 次へ

  script.
    window.fbAsyncInit = function() {
      FB.init({
        appId            : '273292769919607',
        autoLogAppEvents : true,
        xfbml            : true,
        version          : 'v3.0'
      });
    };
    (function(d, s, id){
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) {return;}
      js = d.createElement(s); js.id = id;
      js.src = "https://connect.facebook.net/JP/sdk.js";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));

  script.
    (function(d, s, id) {
     var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = 'https://connect.facebook.net/ja_JP/sdk.js#xfbml=1&version=v3.0&appId=273292769919607&autoLogAppEvents=1';
    fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
